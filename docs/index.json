{
  "info": {
    "title": "Index.as API",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@index.as"
    }
  },
  "openapi": "3.0.1",
  "servers": [
    {
      "url": "http://localhost:2087",
      "description": "Local"
    },
    {
      "url": "https://index.as/api",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "User"
    },
    {
      "name": "Index"
    },
    {
      "name": "Link"
    },
    {
      "name": "Tag"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {
      "q": {
        "in": "query",
        "name": "q",
        "description": "Search query",
        "schema": {
          "type": "string"
        },
        "required": true
      },
      "offset": {
        "in": "query",
        "name": "offset",
        "schema": {
          "type": "integer",
          "default": 0
        }
      },
      "limit": {
        "in": "query",
        "name": "limit",
        "schema": {
          "type": "integer",
          "default": 100
        }
      },
      "cat": {
        "in": "query",
        "name": "cat",
        "schema": {
          "type": "string",
          "default": "all",
          "enum": ["all", "owner", "shared"]
        },
        "description": "Category of indexes to get (owner/shared/all)"
      },
      "topic_id": {
        "in": "path",
        "name": "topic_id",
        "schema": { "type": "string" },
        "required": true
      }
    },
    "schemas": {
      "users": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/userWithUserTopics"
        }
      },
      "topicSearchResponseMe": {
        "type": "object",
        "properties": {
          "searchOwnedTopics": {
            "type": "integer"
          },
          "searchSharedTopics": {
            "type": "integer"
          },
          "topics": {
            "$ref": "#/components/schemas/ownedIndexes"
          }
        }
      },
      "topicSearchResponse": {
        "type": "object",
        "properties": {
          "topics": {
            "$ref": "#/components/schemas/indexes"
          }
        }
      },
      "userWithTopics": {
        "allOf": [
          {
            "$ref": "#/components/schemas/user"
          },
          {
            "type": "object",
            "properties": {
              "topics": {
                "$ref": "#/components/schemas/indexes"
              }
            }
          }
        ]
      },
      "userWithUserTopics": {
        "allOf": [
          {
            "$ref": "#/components/schemas/user"
          },
          {
            "type": "object",
            "properties": {
              "user_topics": {
                "$ref": "#/components/schemas/userTopics"
              }
            }
          }
        ]
      },
      "user": {
        "allOf": [
          {
            "$ref": "#/components/schemas/profileInfo"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "profile_picture": {
                "type": "string"
              }
            }
          }
        ]
      },
      "me": {
        "allOf": [
          {
            "$ref": "#/components/schemas/user"
          },
          {
            "type": "object",
            "properties": {
              "ownedTopics": {
                "type": "integer"
              },
              "sharedTopics": {
                "type": "integer"
              },
              "topics": {
                "$ref": "#/components/schemas/ownedIndexes"
              },
              "verified": {
                "type": "boolean"
              },
              "no_password": {
                "type": "boolean"
              }
            }
          }
        ]
      },
      "profileInfoResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/user"
          },
          {
            "type": "object",
            "properties": {
              "verified": {
                "type": "boolean"
              }
            }
          }
        ]
      },
      "profileInfo": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "pattern": "^w+$"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "location": {
            "type": "string"
          },
          "bio": {
            "type": "string"
          },
          "url_facebook": {
            "type": "string"
          },
          "url_patreon": {
            "type": "string"
          },
          "url_twitter": {
            "type": "string"
          },
          "url_web": {
            "type": "string"
          }
        }
      },
      "link": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "topic_id": {
            "type": "integer"
          },
          "id": {
            "type": "integer"
          },
          "sort": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "links": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/link"
        }
      },
      "index": {
        "type": "object",
        "properties": {
          "cloned_from": {
            "type": "integer"
          },
          "created_at": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          },
          "links": {
            "$ref": "#/components/schemas/links"
          },
          "owner": {
            "$ref": "#/components/schemas/userWithUserTopics"
          },
          "public_rights": {
            "type": "string",
            "enum": ["off", "edit", "view"]
          },
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "userTopics": {
        "type": "object",
        "properties": {
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["owner", "edit", "view"]
          },
          "topic_id": {
            "type": "integer"
          },
          "user_id": {
            "type": "integer"
          }
        }
      },
      "indexes": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/index"
        }
      },
      "ownedIndexes": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/ownedIndex"
        }
      },
      "ownedIndex": {
        "allOf": [
          {
            "$ref": "#/components/schemas/index"
          },
          {
            "type": "object",
            "properties": {
              "users": {
                "$ref": "#/components/schemas/users"
              },
              "user_topics": {
                "$ref": "#/components/schemas/userTopics"
              }
            }
          }
        ]
      }
    }
  },
  "paths": {
    "/users/login": {
      "post": {
        "summary": "User login",
        "tags": ["User"],
        "operationId": "login",
        "requestBody": {
          "description": "JSON object containing username/email and password",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "pattern": "^w+$"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid username or password"
          }
        }
      }
    },
    "/users/register": {
      "post": {
        "summary": "User register",
        "tags": ["User"],
        "operationId": "register",
        "requestBody": {
          "description": "JSON object containing username, email, and password",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "pattern": "^w+$"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": ["username", "password", "email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Invalid email/username"
          },
          "422": {
            "description": "Password doesn't meet specified requirements"
          }
        }
      }
    },
    "/users/forgot_password": {
      "post": {
        "summary": "Generate a password recovery link",
        "tags": ["User"],
        "operationId": "forgotPassword",
        "requestBody": {
          "description": "JSON object containing email",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Invalid user"
          }
        }
      }
    },
    "/users/reset_password": {
      "post": {
        "summary": "Reset password with a recovery code",
        "tags": ["User"],
        "operationId": "resetPassword",
        "requestBody": {
          "description": "JSON object containing new password and token",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "minLength": 8
                  },
                  "token": {
                    "type": "string"
                  }
                },
                "required": ["password", "token"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "403": {
            "description": "Invalid token"
          },
          "422": {
            "description": "Password doesn't meet specified requirements"
          }
        }
      }
    },
    "/users/picture": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Update user avatar",
        "tags": ["User"],
        "operationId": "updatePicture",
        "requestBody": {
          "description": "Image file to be used as avatar",
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Image upload failed"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/change_password": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Change user password",
        "tags": ["User"],
        "operationId": "changePassword",
        "requestBody": {
          "description": "JSON object containing current password, new password, and password confirmation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "currentPassword": {
                    "type": "string",
                    "minLength": 8
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  },
                  "confirmPassword": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": ["password", "confirmPassword"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Passwords don't match"
          },
          "403": {
            "description": "Invalid current password"
          },
          "422": {
            "description": "Password doesn't meet specified requirements"
          }
        }
      }
    },
    "/users/me": {
      "put": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Change user profile information",
        "tags": ["User"],
        "operationId": "updateMe",
        "requestBody": {
          "description": "JSON object containing profile information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/profileInfo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/profileInfoResponse"
                }
              }
            }
          },
          "403": {
            "description": "Duplicate username/email"
          }
        }
      },
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Get current user info & indexes",
        "tags": ["User"],
        "operationId": "getMe",
        "parameters": [
          {
            "$ref": "#/components/parameters/offset"
          },
          {
            "$ref": "#/components/parameters/limit"
          },
          {
            "$ref": "#/components/parameters/cat"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/me"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "delete": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Delete current user",
        "tags": ["User"],
        "operationId": "deleteMe",
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/search": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Search for user",
        "tags": ["User"],
        "operationId": "userSearch",
        "parameters": [
          {
            "$ref": "#/components/parameters/q"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/user"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/confirm": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Confirm account",
        "tags": ["User"],
        "operationId": "confirm",
        "parameters": [
          {
            "in": "query",
            "name": "confirm",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/send_confirmation": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Resend confirmation email",
        "tags": ["User"],
        "operationId": "sendConfirmation",
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/{username}": {
      "get": {
        "summary": "Get user information & indexes",
        "tags": ["User"],
        "operationId": "getUser",
        "parameters": [
          {
            "in": "path",
            "name": "username",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/userWithTopics"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/tags/search": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Search in current user's tags",
        "tags": ["Tag"],
        "operationId": "tagSearch",
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/topics/search": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Search in a user's indexes",
        "tags": ["Index"],
        "operationId": "topicSearch",
        "parameters": [
          {
            "$ref": "#/components/parameters/q"
          },
          {
            "$ref": "#/components/parameters/offset"
          },
          {
            "$ref": "#/components/parameters/limit"
          },
          {
            "$ref": "#/components/parameters/cat"
          },
          {
            "in": "query",
            "name": "username",
            "description": "Defaults to current user if authed",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/topicSearchResponse"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/topics": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Create index",
        "tags": ["Index"],
        "operationId": "createTopic",
        "requestBody": {
          "description": "JSON object containing title or links",
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      }
                    }
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string"
                        }
                      }
                    }
                  }
                ],
                "example": {
                  "title": "My favorite songs"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ownedIndex"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/topics/{topic_id}": {
      "delete": {
        "tags": ["Index"],
        "summary": "Delete index",
        "operationId": "deleteTopic",
        "parameters": [
          {
            "$ref": "#/components/parameters/topic_id"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": { "description": "Success" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Topic not found" }
        }
      },
      "put": {
        "tags": ["Index"],
        "summary": "Update index",
        "operationId": "updateTopic",
        "parameters": [
          {
            "$ref": "#/components/parameters/topic_id"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "JSON object containing title/public rights/private rights/topic users (all fields except title require owner permission)",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "public_rights": {
                    "type": "string",
                    "enum": ["off", "view", "edit"]
                  },
                  "title": {
                    "type": "string"
                  },
                  "users": {
                    "$ref": "#/components/schemas/users"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/index"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Topic not found" }
        }
      },
      "get": {
        "tags": ["Index"],
        "summary": "Get index",
        "operationId": "showTopic",
        "parameters": [
          {
            "$ref": "#/components/parameters/topic_id"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/index"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Topic not found" }
        }
      }
    },
    "/topics/{topic_id}/leave": {
      "post": {
        "tags": ["Index"],
        "summary": "Leave index",
        "operationId": "leave",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/topic_id"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Topic/user not found" },
          "403": { "description": "Topic owner cannot leave topic" }
        }
      }
    },
    "/topics/{topic_id}/clone": {
      "post": {
        "tags": ["Index"],
        "summary": "Clone index",
        "operationId": "clone",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/topic_id"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ownedIndex"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Topic not found" }
